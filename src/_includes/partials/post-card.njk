        <a href="{{ post.url }}" class="block rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors overflow-hidden border border-gray-200 dark:border-gray-600 p-4">
          <div class="flex flex-col-reverse sm:flex-row sm:items-center gap-4">
